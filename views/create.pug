extends layout 
block content

  .add-recipe-page
    h2 Add New Recipe

    form(method="post")
      fieldset
        label(for="title") Title
        input(type="text", name="title")
      fieldset
        label(for="description") Description
        input(type="text", name="description")
      fieldset
        label(for="preptime") Prep Time (mins)
        input(type="number", name="preptime")
      fieldset
        label(for="cooktime") Cooking Time (mins)
        input(type="number", name="cooktime")
      fieldset
        label(for="instructions") Instructions
        textarea(type="text", name="instructions")
      fieldset
        label(for="imgurl") Image URL
        input(type="text", name="imgurl")
      .ingredient-container(data-total=1)
        h2 Ingredients
        fieldset
          label(for="ingredient[0][name]") Ingredient Name + Amount
          .ingredients
            input(type="text", name="ingredient[0][name]", placeholder="Ingredient")
            input(type="number", name="ingredient[0][amount]", placeholder="1")
      button(type="button")#addIngredientButton Add Another Ingredient
      fieldset
        button.submit-btn(type="submit") Submit