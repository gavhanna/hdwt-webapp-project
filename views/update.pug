extends layout 
block content

  .add-recipe-page
    h2 Update #{recipe.title}

    form(method="post")
      fieldset
        label(for="title") Title
        input(type="text", name="title",value=recipe.title)
      fieldset
        label(for="description") Description
        input(type="text", name="description", value=recipe.description)
      fieldset
        label(for="preptime") Prep Time
        input(type="number", name="preptime", value=recipe.preptime)
      fieldset
        label(for="cooktime") Cooking Time
        input(type="number", name="cooktime", value=recipe.cooktime)
      fieldset
        label(for="instructions") Instructions
        textarea(type="text", name="instructions", rows="5") #{recipe.instructions}
      fieldset
        label(for="imgurl") Image URL
        input(type="text", name="imgurl", value=recipe.img_url)
      .ingredient-container
        h2 Ingredients
        each ingredient in ingredients
          fieldset
            label Ingredient Name + Amount
            .ingredients
              input(type="text", name="ingredient["+ingredient.id+"][name]", value=ingredient.name) 
              input(type="number", name="ingredient["+ingredient.id+"][amount]", value=ingredient.amount)
              a(href="/delete-ingredient/" + ingredient.id) Delete
      fieldset
        button.submit-btn(type="submit") Update